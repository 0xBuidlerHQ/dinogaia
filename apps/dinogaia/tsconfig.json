{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@app/*": ["./src/app/*"],
			"@components/*": ["./src/components/*"],
			"@config/*": ["./src/config/*"],
			"@content/*": ["./src/content/*"],
			"@features/*": ["./src/features/*"],
			"@hooks/*": ["./src/hooks/*"],
			"@lib/*": ["./src/lib/*"],
			"@stores/*": ["./src/stores/*"],
			"@types/*": ["./src/types/*"],
			//
			"@0xbuidlerhq/ui/*": ["../../packages/ui/src/*"],
			"@0xbuidlerhq/assets/*": ["../../packages/assets/src/*"],
			"@0xbuidlerhq/connect-button/*": ["../../packages/connect-button/src/*"],
			"@0xbuidlerhq/core/*": ["../../packages/core/src/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		".next/dev/types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
